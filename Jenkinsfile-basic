#!/usr/bin/env groovy
def  gv

pipeline {
    agent none
    stages {
        stage('init') {
            steps {
                script {
                    gv = load "script.groovy"
                }
            }
        }
        stage('build') {
            steps {
                script {
                    echo "Building the application..."
                    gv.buildJar()
                }
            }
        }
        stage('test') {
            steps {
                script {
                    echo "Testing the application..."
                    gv.buildImage()
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo "Deploying the application..."
                }
            }
        }
    }
}
