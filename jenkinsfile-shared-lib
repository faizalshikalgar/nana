#!/usr/bin/env groovy

@Library ('jenkins-lib')
def  gv

pipeline {
    agent any
    tools {
        maven "maven"
    }
    stages { 
        stage('build') {
            steps {
                script {
                    echo "Building the application..."
                    buildJar()
                }
            }
        }
        stage('dockerImage') {
            steps {
                script {
                    echo "building docker image..."
                    buildDockerImage()
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo "Deploying the application..."
                }
            }
        }
    }
}
