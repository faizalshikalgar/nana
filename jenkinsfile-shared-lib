#!/usr/bin/env groovy

library indentifier: 'jenkins-lib@master', retriever: modernSCM(
    [$class: 'GitSCMSource',
    remote: 'https://github.com/faizalshikalgar/jenkins-lib.git']
)
def  gv

pipeline {
    agent any
    tools {
        maven "maven"
    }
    stages { 
        stage('build') {
            steps {
                script {
                    echo "Building the application..."
                    buildJar()
                }
            }
        }
        stage('dockerImage') {
            steps {
                script {
                    echo "building docker image..."
                    buildDockerImage()
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo "Deploying the application..."
                }
            }
        }
    }
}
